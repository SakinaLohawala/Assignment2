import time
from playsound import playsound
def countdown_timer(seconds):
    while seconds:
        mins, secs = divmod(seconds, 60)
        timer = '{:02d}:{:02d}'.format(mins, secs)
        print(timer, end="\r")
        time.sleep(1)
        seconds -= 1
    print("Time's up!")
    playsound('alarm.mp3')
# Example usage
countdown_timer(10)  # Set the timer for 10 seconds
